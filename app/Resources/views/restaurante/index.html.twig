{% extends 'base.html.twig' %}

{% block body %}
    <h1>Restaurante list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Cif</th>
                <th>Direccion</th>
                <th>Coordenadas</th>
                <th>Telefono</th>
                <th>Foto</th>
                <th>Precio_envio</th>
                <th>Mapa</th>
                <th>Fecha_alta</th>
                <th>Fecha_baja</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Trash</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurante in restaurantes %}
            <tr>
                <td><a href="{{ path('restaurante_show', { 'id': restaurante.id }) }}">{{ restaurante.id }}</a></td>
                <td>{{ restaurante.username }}</td>
                <td>{{ restaurante.password }}</td>
                <td>{{ restaurante.email }}</td>
                <td>{{ restaurante.nombre }}</td>
                <td>{{ restaurante.cif }}</td>
                <td>{{ restaurante.direccion }}</td>
                <td>{{ restaurante.coordenadas }}</td>
                <td>{{ restaurante.telefono }}</td>
                <td>{{ restaurante.foto }}</td>
                <td>{{ restaurante.precioenvio }}</td>
                <td>{{ restaurante.mapa }}</td>
                <td>{% if restaurante.fechaalta %}{{ restaurante.fechaalta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if restaurante.fechabaja %}{{ restaurante.fechabaja|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if restaurante.createdat %}{{ restaurante.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if restaurante.updatedat %}{{ restaurante.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if restaurante.trash %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('restaurante_show', { 'id': restaurante.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
