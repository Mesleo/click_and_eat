{% extends 'FOSUserBundle::layout.html.twig' %}

{% block title %}Acceso{% endblock %}
{% block body %}

    {% block content %}

        {% block fos_user_content %}
    <div class="container" id="content">
        <div class="row">
            {% if url(app.request.attributes.get('_route')) == "https://clickandeat.restaurante.local/app_dev.php/login" %}
            <div class="col-md-6" id="infor">
                <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Gestiona tus reservas</p>
                <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Gestiona tus pedidos online</p>
                <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Administra la configuraci칩n de tu cuenta</p>
            </div>
            {% else %}
                <div class="col-md-6" id="infor">
                    <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Haz tu pedido o reserva en 5 minutos</p>
                    <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Busca restaurantes por tu zona</p>
                    <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Busca el tipo de comida que te apetezca</p>
                </div>
            {% endif %}
            <div class="col-md-6" id="login">
                <h3>{% if url(app.request.attributes.get('_route')) == "https://clickandeat.restaurante.local/app_dev.php/login" %}
                    Mi Restaurante
                    {% else %}
                        Acceso clientes
                    {% endif %}
                </h3>
                <hr>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('admin_check') }}" method="post">
                    <div class="form-group">
                        <label for="username" class="control-label">Email</label>
                        <input type="text" class="form-control" id="username" name="_username" value="" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Contrase침a</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Contrase침a">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="remember"> Recordar contrase침a
                    </div>
                    <div class="form-group">
                        <a class="btn btn-success "
                           href="{% if url(app.request.attributes.get('_route')) == "https://clickandeat.restaurante.local/app_dev.php/login" %}{{ path('registro_restaurante') }}{% else %}{{ path('controlador_registro_cliente') }}{% endif %}" role="button">Registrarme</a>
                        <button type="submit" class="btn btn-connect ">Conectar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
        {% endblock fos_user_content %}
        {% block javascripts %}
            {{parent()}}
        {% endblock %}
    {% endblock %}
{% endblock %}