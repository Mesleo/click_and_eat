{# app/Resources/FOSUserBundle/views/Security/login.html.twig #}
{% extends 'FOSUserBundle::layout.html.twig' %}

{% block title %}Acceso{% endblock %}
{% block body %}
    {% block content %}
		{% block fos_user_content %}
			<div class="container cont-login" id="content">
				<div class="row">
					{% if url(app.request.attributes.get('_route')) == "http://clickandeat.restaurante.local/app_dev.php/login" %}
					<div class="col-md-6" id="infor">
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Gestiona tus reservas</p>
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Gestiona tus pedidos online</p>
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Administra la configuración de tu cuenta</p>
					</div>
					{% else %}
					<div class="col-md-6" id="infor">
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Haz tu pedido o reserva en 5 minutos</p>
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Busca restaurantes por tu zona</p>
						<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Busca el tipo de comida que te apetezca</p>
					</div>
					{% endif %}
					<div class="col-md-6" id="login">
						<h3>{% if url(app.request.attributes.get('_route')) == "http://clickandeat.restaurante.local/app_dev.php/login" %}
							Conéctate a Mi Restaurante
							{% else %}
							Acceso clientes
							{% endif %}
						</h3>
						<hr>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						{% if error %}
							<div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div><br />
						{% endif %}
						<form action="{{ path('admin_check') }}" method="post">
							<div class="form-group">
								<label for="username" class="control-label">Usuario</label>
								<input type="text" class="form-control" id="username" name="_username" value="" placeholder="Usuario">
							</div>
							<div class="form-group">
								<label for="password" class="control-label">Contraseña</label>
								<input type="password" class="form-control" id="password" name="_password" placeholder="Contraseña">
							</div>
							<div class="form-group">
							</div>
							<div class="form-group">
								<div class="col-md-6">
									<button type="submit" class="btn btn-connect">Conectar</button>
								</div>
								<div class="col-md-6">
									<a href="{{ path('home_client') }}"><button type="button" id="btn-cancel" class="btn btn-danger btn-cancel">Cancelar</button></a>
								</div>
							</div>
							{% if url(app.request.attributes.get('_route')) == "http://clickandeat.cliente.local/app_dev.php/login" %}
								<div class="text-center"><br />¿Aún no tienes cuenta en Click & Eat? <a href="{{ path('registro_cliente') }}">Regístrate</a></div>
							{% endif %}
						</form>
					</div>
				</div>
			</div>
        {% endblock fos_user_content %}
        {% block javascripts %}
            {{parent()}}
        {% endblock %}
    {% endblock %}
{% endblock %}