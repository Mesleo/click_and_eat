<!-- src/ManageCompanyBundle/Resources/views/Page/base.html.twig -->
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <title>{% block title %}Click&Eat{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/estilos.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <section id="wrapper">
            {% block navigation %}
                <nav class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Desplegar navegación</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="#" class="navbar-brand">Click & Eat</a>
                    </div>

                    <!-- Agrupar los enlaces de navegación, los formularios y cualquier
                         otro elemento que se pueda ocultar al minimizar la barra -->
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="{{ path('gestion_productos') }}">Productos</a></li>
                            <li><a href="#">Mesas</a></li>
                            <li><a href="#">Trabajadores</a></li>
                            <li><a href="#">Pedidos</a></li>
                            <li><a href="#">Reservas</a></li>
                            </li>
                        </ul>
                    </div>
                </nav>
            {% endblock %}
            
            <section class="main-col">
                {% block body %}
                    <h1>Bienvenido al panel de gestión de su restaurante</h1>
                {% endblock %}
            </section>
        </section>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
            <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>