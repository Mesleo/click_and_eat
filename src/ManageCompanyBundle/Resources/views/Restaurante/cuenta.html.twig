{# src/Manage/CompanyBundle/Resources/views/Page/form.html.twig #}
{% extends 'ManageCompanyBundle:Page:base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>Configuración de tu cuenta</h1>
		{% if info is defined %}
			<h2>{{ info }}</h2>
		{% endif %}
		<form method="post" id="form-account" action="{{ path('cuenta_guardar') }}" enctype="multipart/form-data">
			<h2>Datos usuario</h2>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
        				<label class="control-label">Usuario</label>
            			<input type="text" class="form-control" name="inputUserName" id="inputUserName" {% if user is defined %} value="{{ user.username }}" {% endif %} placeholder="Usuario">
    				</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
        				<label class="control-label">Email</label>
            			<input type="email" class="form-control" name="inputEmail" id="inputEmail" {% if user is defined %} value="{{ user.email }}" {% endif %} placeholder="Email">
    				</div>
				</div>
			</div>
    		<h2>Datos empresa</h2>
    		<div class="row">
    			<div class="col-md-8">
    				<div class="form-group">
        				<label class="control-label">Nombre restaurante</label>
            			<input type="text" class="form-control" name="inputNombre" id="inputNombre" {% if restaurante is defined %} value="{{ restaurante.nombre }}" {% endif %} placeholder="Nombre restaurante">
        			</div>
    			</div>
    			<div class="col-md-4">
    				<div class="form-group">
        				<label class="control-label">CIF</label>
            			<input type="text" class="form-control" name="inputCIF" id="inputCIF" {% if restaurante is defined %} value="{{ restaurante.cif }}" {% endif %} placeholder="NIF">
        			</div>
    			</div>
    		</div>
    		<div class="row">
    			<div class="col-md-8">
    				<div class="form-group">
        				<label class="control-label">Dirección</label>
            			<input type="text" class="form-control" name="inputDireccion" id="inputDireccion" {% if restaurante is defined %} value="{{ restaurante.direccion }}" {% endif %} placeholder="Direccion">
        			</div>
    			</div>
				<div class="col-md-4">
    				<div class="form-group">
        				<label class="control-label">Teléfono</label>
            			<input type="text" class="form-control" name="inputTelefono" id="inputTelefono" {% if restaurante is defined %} value="{{ restaurante.telefono }}" {% endif %} placeholder="Telefono">
        			</div>
    			</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="control-label">Provincia</label>
						<select id="provincias" class="form-control" name="provincia">
						{% if provincias is defined %}
							{% for provincia in provincias %}
								{% if restaurante is defined and provincia.id == restaurante.provincia.id %}
									<option value="{{ provincia.id }}" selected>{{ provincia.nombre }}</option>
								{% else %}
									<option value="{{ provincia.id }}">{{ provincia.nombre }}</option>
								{% endif %}
							{% endfor %}
							{% endif %}
						</select>
					</div>
				</div>
    			<div class="col-md-6">
    				<div class="form-group" id="select-localidades">
        				<label class="control-label">Localidad</label>
        				<select class="form-control" name="localidad" id="restaurante_localidad">
							{% if restaurante is defined %}
								<option value="{{ restaurante.localidad.id }}" selected>{{ restaurante.localidad.nombre }}</option>
							{% endif %}
            			</select>
        			</div>
    			</div>
    		</div>
    		<div class="row">
    			<div class="col-md-8">
    				<div class="form-group">
        				<label class="control-label">Tipo de comida</label>
						<input type="text" class="form-control tm-input tm-input-typeahead" id="tipo-comida" name="tipo-comida" placeholder="Española">
						<input type="hidden" id="txthid" name="id">
        			</div>
    			</div>
    			<div class="col-md-4">
    				<label class="control-label">Precio envío</label>
    				<input type="number" step="0.01" class="form-control" name="inputEnvio" id="inputEnvio" {% if restaurante is defined %} value="{{ restaurante.precioEnvio }}" {% endif %} placeholder="Precio envio">
    			</div>
    		</div>
			{% if restaurante is defined %}
				{% if restaurante.foto != null %}
					<p><img src="{{ asset('uploads/restaurantes/images/' ~ restaurante.foto ) }}" alt="Foto de restaurante" class="img-thumbnail"></p>
				{% endif %}
			{% endif %}
			<div class="row">
				<div class="col-md-12">
					<label for="foto">Foto</label>
					<input type="file" class="form-control" name="foto" id="foto">
				</div>
			</div>
        	<div class="form-group">
	        	<input type="submit" class="btn btn-primary" name="save-account" value="Enviar">
            	<input type="reset" class="btn btn-default button-reset" value="Limpiar">
        	</div>
		</form>
	</div>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('manage/css/tagmanager.css') }}">
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('manage/js/bloodhound.min.js') }}"></script>
	<script src="{{ asset('manage/js/tagmanager.js') }}"></script>
	<script src="{{ asset('manage/js/typeahead.js') }}"></script>
	<script src="{{ asset('manage/js/register.js') }}"></script>
	<script>
		(function(){

			/**
			 * Gestiona las etiquetas, muestra sugerencias a partir de una consulta
			 **/
			{% if restaurante is defined %}

			function checkProvinciaSelected(){
				changeLocalidades($('#provincias').val());
			}

			function changeLocalidades(b){
				$("#select-localidades select").empty();
				$.getJSON('localidades?provincia='+b,function(data){
					$.each(data, function(id,value){
						$("#select-localidades select").append('<option value="'+value[2]+'">'+value[0]+' ('+value[1]+') </option>');
					});
				});
			}

			function tagManager(){
				var categories = new Bloodhound({
					datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
					queryTokenizer: Bloodhound.tokenizers.whitespace,
					limit: 10,
					prefetch: {
						url: '{{ path("tipos_comida_json") }}',
						filter: function (list) {
							return $.map(list, function (value) {
								return { name: value };
							});
						}
					}
				});

				categories.initialize();
				var tagApi = jQuery(".tm-input.tm-input-typeahead").tagsManager({
					prefilled: [{% for tipocomida in restaurante.tipoComida %}
						"{{ tipocomida.nombre }}"{% if not loop.last %},{% endif %}
						{% endfor %}]
				});
				jQuery(".tm-input.tm-input-typeahead").typeahead(null, {
					name: 'categories',
					displayKey: 'name',
					source: categories.ttAdapter()
				}).on('typeahead:selected', function (e, d) {
					tagApi.tagsManager("pushTag", d.name);
				});
			} tagManager();
			
			{% endif %}

			jQuery.fn.resetear = function () {
				$(this).each (function() { this.reset(); });
			}

			$('.button-reset').on('click', function(){
				$('#form-account').resetear();
			});
			$('#restaurante_localidad').bind('click', function(){
				if($('#restaurante_localidad').val() == {{ restaurante.localidad.id }}) {
					checkProvinciaSelected();
				}
			});
		})();
	</script>
{% endblock %}