{# src/ManageCompanyBundle/Resources/views/Restaurante/mesas.html.twig #}
{% extends 'ManageCompanyBundle:Page:base.html.twig' %}

{% block body %}
    <div class="container">
		<p>
			<br />
			<a href="{{ path('add_mesa') }}" class="btn btn-success">Añadir mesa</a>
        </p>
		<div class="be-panel col-sm-12">
            <table id="platos-table" class="table display responsive nowrap">
                <thead>
                <tr>
					<th>Cod Mesa</th>
                    <th>Nº Personas</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
				{% for mesa in mesas %}
					<tr>
                        <td>{{ mesa.codMesa }}</td>
                        <td>{{ mesa.numPersonas }}</td>
                        <td>
                            <a href="{{ path('edit_mesa', {'id_mesa': mesa.id}) }}" class="btn btn-primary">Editar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}