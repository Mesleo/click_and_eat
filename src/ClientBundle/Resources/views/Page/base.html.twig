<!-- src/ClientBundle/Resources/views/Base/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Click&Eat{% endblock %}</title>
		{% block stylesheets %}
            <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/estilos.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
		<section id="wrapper">
			{% block navigation %}
				<nav role="navigation" class="navbar navbar-default">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a href="{{ path('home_client') }}" class="navbar-brand">Click & Eat</a>
					</div>
					<div class="collapse navbar-collapse navbar-ex1-collapse">
            			<ul class="nav navbar-nav navbar-right">
            				{% if user is defined and user != null and user.hasRole('ROLE_USER') %}
            					<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
										¡Hola {{ cliente.nombre }}! <span class="caret"></span>
									</a>
									<ul class="dropdown-menu">
										<li><a href="{{ path('cuenta_info') }}">Información de la cuenta</a></li>
										<li><a href="{{ path('cuenta_direcciones') }}">Direcciones de reparto</a></li>
										<li><a href="{{ path('admin_logout') }}" class="navbar-link">Salir</a></li>
									</ul>
								</li>
							{% else %}
								<li><a href="{{ path('admin_login') }}">Entra o Regístrate</a></li>
							{% endif %}
							<li><a href="#">Ayuda</a></li>
							<li><a href="#">¿Quiénes somos?</a></li>
							<li><a href="#">Contacto</a></li>
            			</ul>
        			</div>
				</nav>
			{% endblock %}
			
			<section class="main-col">
				{% block body %}{% endblock %}
			</section>

			<div id="footer">
                {% block footer %}
                    <p>Click & Eat</p>
                {% endblock %}
            </div>
		</section>
        <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
        <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
		{% block javascripts %}
        {% endblock %}
    </body>
</html>
