{% extends 'RegisterBundle:Base:base.html.twig' %}

{% block body %}
	<script async defer
			src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgRHjOa0n38Z2adOjuXwBnmEBFMn4qltc&callback=initMap">
	</script>
	<div id="map"></div>
	<script type="text/javascript">

		var map;
		function initMap() {
			map = new google.maps.Map(document.getElementById('map'), {
				center: {lat: -34.397, lng: 150.644},
				zoom: 8
			});
		}

	</script>
	<div class="container">

    	{{ form_start(form) }}
		{{ form_errors(form) }}

		{#{{ form_row(form._token) }}#}
    	<h2>Datos usuario</h2>

    	{{ form_row(form.username) }}

    	<div class="row">
    		<div class="col-md-6">
    			{{ form_row(form.password.first) }}
    		</div>
    		<div class="col-md-6">
    			{{ form_row(form.password.second) }}
    		</div>
    	</div>

   		{{ form_row(form.email) }}

   		<h2>Datos empresa</h2>

    	{{ form_row(form.nombre) }}
    	{{ form_row(form.cif) }}

    	<div class="row">
    		<div class="col-md-8">
    			{{ form_row(form.direccion) }}
    		</div>
    		<div class="col-md-4">
    			{{ form_row(form.telefono) }}
    		</div>
    	</div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.provincia) }}
            </div>
            <div class="col-md-6" id="select-localidades">
                <label for="localidades">Localidad</label>
                    <select name="localidad" id="localidad" class="form-control" required></select>
            </div>
        </div>
		<div class="row">
			<div class="col-md-12">
				{{ form_row(form.coordenadas) }}
				<div class="info-coordenadas"></div>
				<div id="map-coords"></div>
				<strong>Nota: </strong>Si no está registrando el restaurante desde donde está éste ubicado, escriba las coordenadas a mano. Si no sabe cómo hacerlo visite esta página: <a href="http://www.coordenadas-gps.com/" target="_blank">http://www.coordenadas-gps.com/</a>
			</div>
		</div>

    	{{ form_row(form.img) }}
    	{{ form_row(form.precio_envio) }}

		<div class="checkbox">
			<label>
				<input name="term-license" type="checkbox" required> Acepto los términos y licencias
			</label>
		</div>

    	<div class="form-group">
    		<br />
    		<button type="submit" id="button-submit" class="btn btn-primary">Registro</button>
    		<a href="{{ path('gestion') }}" id="button-submit" class="btn btn-danger">Cancelar</a>
    	</div>

    	{{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('manage/js/register.js') }}"></script>
	<script>
		(function(){
			var inputCoords, divLocation, selectProvincia, selectLocalidad;

			function initVars(){
				inputCoords = $("#restaurante_coordenadas");
				divLocation = $('.info-coordenadas');
                selectProvincia = $('#restaurante_provincia');
                selectLocalidad = $('#localidades');
			}

			function checkGeolocation(){
				if ("geolocation" in navigator) {
					navigator.geolocation.watchPosition(function(position) {
						inputCoords.attr("placeholder", position.coords.latitude+"/"+position.coords.longitude);
						inputCoords.val(position.coords.latitude+"/"+position.coords.longitude);
						divLocation.html("Las coordenadas de su ubicación actual son: <ul><li class='li-position'>Latitud: "+position.coords.latitude+
						"</li><li class='li-position'>Longitud: "+position.coords.longitude+"</li></ul>");
					});
				} else {
					divLocation.html("La localización no está disponible en su navegador");
				}
			}

            function changeSelectProvincia() {
				selectProvincia.change(function() {
					$("#select-localidades select").empty();
					$.getJSON('localidades?provincia='+selectProvincia.val(),function(data){
						$.each(data, function(id,value){
							$("#select-localidades select").append('<option value="'+value[2]+'">'+value[0]+' ('+value[1]+') </option>');
						});
					});
				});
            }

			initVars();
			checkGeolocation();
            changeSelectProvincia();
		})();
	</script>
{% endblock %}